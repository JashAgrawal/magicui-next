{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "incremental": true,
    // "plugins": [
    //   {
    //     "name": "next"
    //   }
    // ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "rootDir": "src",
    "incremental": true
  },
  "include": [
    "src/index.ts",
    "src/components/**/*",
    "src/contexts/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "src/lib/**/*",
    "src/nLib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app/**/*",
    "src/examples/**/*",
    "public",
    "**/*.spec.ts",
    "**/*.test.ts",
    "eslint.config.mjs",
    "next.config.ts",
    "postcss.config.mjs",
    "tailwind.config.ts",
    "tsup.config.js"
  ]
}
